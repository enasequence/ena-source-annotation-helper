{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "folding": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "normalizer": {
        "lowerasciinormalizer": {
          "type": "custom",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "false",
    "properties": {
      "coll_id": {
        "type": "long",
        "meta": {
          "description": "Collection Identifier"
        }
      },
      "inst_id": {
        "type": "long",
        "meta": {
          "description": "Institute Identifier"
        }
      },
      "coll_code": {
        "type": "text",
        "meta": {
          "description": "Collection Code"
        }
      },
      "coll_name": {
        "type": "text",
        "meta": {
          "description": "Collection Name"
        }
      },
      "coll_type": {
        "type": "text",
        "meta": {
          "description": "Collection Type"
        }
      },
      "qualifier_type": {
        "type": "text",
        "meta": {
          "description": "Qualifier Type"
        }
      },
      "coll_url": {
        "type": "text",
        "meta": {
          "description": "Collection URL"
        }
      }
    }
  }
}
